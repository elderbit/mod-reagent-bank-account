[worldserver]

########################################
# Reagent Bank Account Config
########################################

#    ReagentBankAccount.Enable
#        Description: Enable the reagent bank (account-wide)
#        Default:     0 - Disabled
#                     1 - Enabled
ReagentBankAccount.Enable = 1

#    ReagentBankAccount.AccountWide
#        Description: Account-wide reagent bank
#        Default:     0 - Disabled
#                     1 - Enabled
ReagentBankAccount.AccountWide = 0

#    ReagentBankAccount.MaxOptionsPerPage
#        Description: Number of items shown per page in the reagent bank NPC menu
#        Default:     7
#
ReagentBankAccount.MaxOptionsPerPage = 7

#    ReagentBankAccount.Audit
#        Description: Enable audit logging of reagent deposits and withdrawals.
#        Default: 0 (disabled)
ReagentBankAccount.Audit = 0

#    ReagentBankAccount.AuditRetentionSeconds
#        Description: How long to retain audit rows (seconds) before pruning.
#        Default: 604800 (7 days)
ReagentBankAccount.AuditRetentionSeconds = 604800

#    ReagentBankAccount.AuditCleanupIntervalSeconds
#        Description: Minimum interval between automatic audit cleanup runs (seconds).
#        Default: 3600 (1 hour)
ReagentBankAccount.AuditCleanupIntervalSeconds = 3600
